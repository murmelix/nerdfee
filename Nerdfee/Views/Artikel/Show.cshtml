@model Nerdfee.Models.Article

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                @if (ViewBag.HasImage)
                {                
                    <img src="@Url.Action("GetPicture", "Artikel", new { id = Model.Id })" />
                }
                @foreach (var t in Model.Text.Split('\n'))
                {
                    <p>@t</p>
                }
            </div>
        </div>
    </div>
</article>

<div id="disqus_thread"></div>  
<script>

var disqus_config = function () {
    this.page.url = 'http://nerdfee.azurewebsites.net/Artikel/Show/@Model.Id';  // Replace PAGE_URL with your page's canonical URL variable
    this.page.identifier = '@Model.ThreadId'; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
    this.page.title = '@Model.Titel';
};

(function() { // DON'T EDIT BELOW THIS LINE
var d = document, s = d.createElement('script');
s.src = 'https://nerdfee.disqus.com/embed.js';
s.setAttribute('data-timestamp', +new Date());
(d.head || d.body).appendChild(s);
})();
</script>
