@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
            <img src="~/images/header.jpg" alt="Nerdfee" class="img" />
</div>

@foreach (var item in Model)
{
    @if (@item.Message.Length < 200) { continue; }
 
    <div class="well well-sm" style="white-space: pre-line">
        <h3>@item.Created</h3>
        @if (@item.PictureUrl!=null)
        {
            <img style="width: 300px;" src="@item.PictureUrl"/>
        }
        <text>@item.Message</text>
    </div>
}
